<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_scr_comp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compose_btn_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_scr_xml_btn"
        android:background="@color/purple_700"
        android:padding="30dp"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_scr_xml_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xml_btn_text"
        app:layout_constraintTop_toBottomOf="@id/main_scr_comp_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/teal_700"
        android:padding="30dp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>